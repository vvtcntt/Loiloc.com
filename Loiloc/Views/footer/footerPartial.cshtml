            <div class="Tear_Sp">
                <div class="Left_Tear_Sp">

                </div>
                <div class="Right_Tear_Sp">
                    <span class="sp1">
                        Tư vấn 01
                    </span>
                    <span class="sp2">
                        @Model.HotlineIN
                    </span>
                </div>
            </div>
            <div class="Tear_Sp">
                <div class="Left_Tear_Sp">

                </div>
                <div class="Right_Tear_Sp">
