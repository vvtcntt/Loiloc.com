@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
@using PagedList.Mvc;
@model PagedList.IPagedList<Loiloc.Models.tblNew>
@using Loiloc.Models
<div class="nVar_Product">
    <nav> @Html.Raw(ViewBag.nUrl)</nav>
</div>


<div id="News">

    <div id="LeftNews">
        <div class="Tear_Cate">
            <div class="nVar_Tear_Cate" style="background:#ff3c00">
                <span>Chuyên mục chính</span>
            </div>
            <div class="Content_Tear_Cate">
                <ul>
                    <li><a href="/Gioi-thieu" title="Giới thiệu" rel="nofollow"><span style="font-weight:normal">❖</span>  Về chúng tôi</a></li>
                    <li><a href="/tin-tuc" title="tin tức" rel="nofollow"><span style="font-weight:normal">❖</span>  Tin tức</a></li>
                    <li><a href="/Tuyen-dung" title="tuyển dụng" rel="nofollow"><span style="font-weight:normal">❖</span>  Tuyển dụng</a></li>
                    <li><a href="/Lien-he" title="liên hệ" rel="nofollow"><span style="font-weight:normal">❖</span>  Liên hệ</a></li>
                    <li><a href="/He-thong-phan-phoi" title="hệ thống phân phối" rel="nofollow"><span style="font-weight:normal">❖</span>  Hệ thống phân phối</a></li>
                </ul>
            </div>
        </div>
        <div class="Tear_Cate">
            <div class="nVar_Tear_Cate" style="background:#0063a4">
                <span>Chính sách & dịch vụ</span>
            </div>
            <div class="Content_Tear_Cate1">
                <ul>
                    @Html.Raw(ViewBag.chuoichinhsach)
                </ul>
            </div>
        </div>

        <div class="Tear_Cate">
            <div class="nVar_Tear_Cate" style="background:#0063a4">
                <span>Tin tức nổi bật</span>
            </div>
            <div class="Content_Tear_Cate1">
                <ul>
                    @Html.Raw(ViewBag.chuoinewnews)
                </ul>
            </div>
        </div>
    </div>
    <div id="RightNews">
        <div class="nVar_News">
            <span></span><h1>@ViewBag.Name</h1>
        </div>
        @foreach (var item in Model)
        {
            <div class="Tear_News">
                <a href="/Tin-tuc/@item.Tag" title="@item.Name"><img src="@item.Images" alt="@item.Name" title="@item.Name" /></a>
                <a href="/Tin-tuc/@item.Tag" title="@item.Name">@item.Name</a>
                <span class="date"><span class="iCon"></span>Thời gian gửi : @item.DateCreate</span>
                <span class="des">
                    @{
                        string des = StringClass.StripHtml(item.Description);
                    }
                    @Html.Raw(des)
                </span>
            </div>
                        }
        @Html.PagedListPager(Model, page => Url.Action("listNews", new { page = page, sortOrder = ViewBag.CurrentSortOrder, sortName = ViewBag.CurrentSortName, sortLevel = ViewBag.CurrentSortLevel }), (PagedListRenderOptions)ViewBag.ship)


    </div>
</div>
<div class="Clear"></div>

