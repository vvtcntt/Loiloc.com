@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

@model Loiloc.Models.tblNew
<div class="nVar_Product">
    <nav> @Html.Raw(ViewBag.nUrl)</nav>
</div>


<div id="News">

    <div id="LeftNews">
        <div class="Tear_Cate">
            <div class="nVar_Tear_Cate" style="background:#ff3c00">
                <span>Chuyên mục chính</span>
            </div>
            <div class="Content_Tear_Cate">
                <ul>
                    <li><a href="/Gioi-thieu" title="Giới thiệu" rel="nofollow"><span style="font-weight:normal">❖</span>  Về chúng tôi</a></li>
                    <li><a href="/Tin-tuc" title="tin tức" rel="nofollow"><span style="font-weight:normal">❖</span>  Tin tức</a></li>
                    <li><a href="/Tu-van-mua-loi-loc" title="Tư vấn thay lõi lọc" rel="nofollow"><span style="font-weight:normal">❖</span> Tư vấn thay lõi lọc nước</a></li>

                    <li><a href="/Tuyen-dung" title="tuyển dụng" rel="nofollow"><span style="font-weight:normal">❖</span>  Tuyển dụng</a></li>
                    <li><a href="/Lien-he" title="liên hệ" rel="nofollow"><span style="font-weight:normal">❖</span>  Liên hệ</a></li>
                    <li><a href="/He-thong-phan-phoi" title="hệ thống phân phối" rel="nofollow"><span style="font-weight:normal">❖</span>  Hệ thống phân phối</a></li>
                </ul>
            </div>
        </div>



    </div>
    <div id="RightNews">
        <div class="nVar_NewsDetail">
            <h1>@Model.Name</h1>
            <div class="Clear"></div>
            <div class="toolbar"><span class="Cate"><span></span>@ViewBag.NameMenu</span><span class="Cata"><span></span>Thời gian gửi: @Model.DateCreate</span><span class="Account"><span></span>@ViewBag.Username</span> </div>
        </div>
        <div class="NewsDetail">
            <div class="Des_Detail">
                @Model.Description

            </div>
            @Html.Raw(ViewBag.chuoinew)
            <div class="Content_Detail">
                @Html.Raw(Model.Content)
            </div>
            <div class="Tag"> <span>Tags</span>@Html.Raw(ViewBag.chuoitag)</div>
        </div>
        <div id="Comment">
            <div class="nVar_2">
                <span>Nhận xét đánh giá</span>
            </div>
            <div id="Sluion">

                <div class="Mxh" style="float: left; width: 100%; margin-top:5px">
                    <div style="float:left" class="fb-like" data-send="true" data-layout="button_count" data-width="60"
                         data-show-faces="true">
                    </div>
                    <div class="fb-send" style="float:left; margin:0px 5px" data-href="@Request.Url.ToString()"></div>
                    <div id="g" style="float: left; margin: 0px 0px;width: auto">
                        <g:plusone size="medium"></g:plusone>
                    </div>
                </div>
            </div>

            <div id="ConmentFacebook">
                <div class="fb-comments" data-href="@Request.Url.ToString()" data-num-posts="20" style="width:100%; float:left; margin:0px" width="100%"></div>
            </div>
        </div>
        <div class="Tintuclienquan">
            <span class="Name">Tin tức liên quan</span>
            <div class="Content_Tintuclienquan">
                <ul>
                    @Html.Raw(ViewBag.chuoinewnews)
                </ul>
            </div>
        </div>
    </div>
</div>

