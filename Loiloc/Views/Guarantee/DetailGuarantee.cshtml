
@{
     Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
@model Loiloc.Models.tblGuarantee
 <div class="nVar_Product">
    <nav><a href="/" title="">Trang chủ</a><i></i>@Model.Name</nav>
</div>


<div id="Guarantee">
    <h1>@Model.Name</h1>
    <div id="Info_Guarantee">
        <div class="tr_gua">
            <div class="td_gua"><span>Tên trung tâm</span></div>
            <div class="td_gua"><span>@Model.Name</span></div>
        </div>
        <div class="tr_gua">
            <div class="td_gua"><span>Khu vực áp dụng</span></div>
            <div class="td_gua"><span>@ViewBag.District</span></div>
        </div>
        <div class="tr_gua">
            <div class="td_gua"><span>Địa chỉ</span></div>
            <div class="td_gua"><span>@Model.Address</span></div>
        </div>
        <div class="tr_gua">
            <div class="td_gua"><span>Điện thoại</span></div>
            <div class="td_gua"><span>@Model.Mobile</span></div>
        </div>
        <div class="tr_gua">
            <div class="td_gua"><span>Email</span></div>
            <div class="td_gua"><span>@Model.Email</span></div>
        </div>
        <div class="tr_gua">
            <div class="td_gua"><span>Thời gian làm việc</span></div>
            <div class="td_gua"><span>@Model.TimeWork</span></div>
        </div>
        <div class="tr_gua">
            <div class="td_gua"><span>Ngày cập nhật</span></div>
            <div class="td_gua"><span>@Model.DateCreate</span></div>
        </div>
    </div>
    <div id="Content_Guarantee">
        @Html.Raw(Model.Content)
        <div class="Tag"> <span>Tags</span>@Html.Raw(ViewBag.chuoitag)</div>

    </div>
    <div id="Comment">
        <div class="nVar_2">
            <span>Nhận xét đánh giá</span>
        </div>
        <div id="Sluion">

            <div class="Mxh" style="float: left; width: 100%; margin-top:5px">
                <div style="float:left" class="fb-like" data-send="true" data-layout="button_count" data-width="60"
                     data-show-faces="true">
                </div>
                <div class="fb-send" style="float:left; margin:0px 5px" data-href="@Request.Url.ToString()"></div>
                <div id="g" style="float: left; margin: 0px 0px;width: auto">
                    <g:plusone size="medium"></g:plusone>
                </div>
            </div>
        </div>

        <div id="ConmentFacebook">
            <div class="fb-comments" data-href="@Request.Url.ToString()" data-num-posts="20" style="width:100%; float:left; margin:0px" width="100%"></div>
        </div>
    </div>
</div>
<div class="Clear"></div>
